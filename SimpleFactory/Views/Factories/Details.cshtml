@model SimpleFactory.ViewModels.FactoryViewModel



@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Factory</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Factories.FactoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Factories.FactoryName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Factories.FactoryId }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<h4>Employer</h4>




<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FactoryId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Employers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FactoryId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmployerId }) |
                @Html.ActionLink("Details", "Details", new { id = item.FactoryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmployerId })
            </td>
        </tr>
    }

</table>